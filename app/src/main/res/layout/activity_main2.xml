<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/postsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!--  住  驻住 砖  砖专转 拽 -->


        <!-- 驻住 1 -->
        <LinearLayout
            android:id="@+id/post1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <!-- 砖 住 -->
            <TextView
                android:id="@+id/trailName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 注"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- 转 -->
            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="4dp"
                android:src="@drawable/sample_trail"/>

            <!-- 转专 住 -->
            <TextView
                android:id="@+id/description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住 驻 注  驻 ."
                android:layout_marginTop="4dp"/>

            <!-- 驻转专 拽 + 住驻专 拽 + 驻转专 转 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- 驻转专 拽 -->
                <Button
                    android:id="@+id/likeBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="わ 拽" />

                <!-- 住驻专 拽  拽 -->
                <TextView
                    android:id="@+id/likesCount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>

                <!-- 驻转专 转 -->
                <Button
                    android:id="@+id/commentBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 转"
                    android:layout_marginStart="16dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 驻住 2 -->
        <LinearLayout
            android:id="@+id/post2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/trailName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住 专"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="4dp"
                android:src="@drawable/sample_trail"/>

            <TextView
                android:id="@+id/description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住 专注, 转 砖驻转 注 ."
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/likeBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="わ 拽" />

                <TextView
                    android:id="@+id/likesCount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/commentBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 转"
                    android:layout_marginStart="16dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 驻住 3 -->
        <LinearLayout
            android:id="@+id/post3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/trailName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爪驻 专"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="4dp"
                android:src="@drawable/sample_trail"/>

            <TextView
                android:id="@+id/description3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住 专 注 驻 专."
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/likeBtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="わ 拽" />

                <TextView
                    android:id="@+id/likesCount3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/commentBtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 转"
                    android:layout_marginStart="16dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 驻住 4 -->
        <LinearLayout
            android:id="@+id/post4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/trailName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 住"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="4dp"
                android:src="@drawable/sample_trail"/>

            <TextView
                android:id="@+id/description4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住 注  驻, 转  砖驻."
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/likeBtn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="わ 拽" />

                <TextView
                    android:id="@+id/likesCount4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/commentBtn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 转"
                    android:layout_marginStart="16dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 驻住 5 -->
        <LinearLayout
            android:id="@+id/post5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/trailName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专 专"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/image5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="4dp"
                android:src="@drawable/sample_trail"/>

            <TextView
                android:id="@+id/description5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住 注 驻驻 注 拽转 转爪驻转."
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/likeBtn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="わ 拽" />

                <TextView
                    android:id="@+id/likesCount5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/commentBtn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 转"
                    android:layout_marginStart="16dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
